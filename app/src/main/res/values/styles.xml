<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
    </style>

    <style name="CircularImageViewStyle" parent="AppTheme">
        <item name="civ_circle_color">@color/colorPrimary</item>
        <item name="civ_border_width">3dp</item>
        <item name="civ_border_color">@color/colorPrimary</item>
<!--        <item name="civ_shadow">true</item>-->
<!--        <item name="civ_shadow_color">@color/colorSecondary</item>-->
<!--        <item name="civ_shadow_radius">4dp</item>-->
    </style>

</resources>